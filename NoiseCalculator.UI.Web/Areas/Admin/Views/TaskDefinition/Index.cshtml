@using NoiseCalculator.UI.Web.Areas.Admin.Resources
@model NoiseCalculator.UI.Web.Areas.Admin.Models.TaskDefinition.TaskDefinitionIndexViewModel

@{
    ViewBag.Title = AdminResources.PageTitleTasks;
    Layout = "~/Areas/Admin/Views/Shared/AdminIndex.cshtml";
}

@section AdminHidden
{
    <input id="urlCreate" type="hidden" value="@Url.Action("Create")" />
    <input id="urlEditGeneric" type="hidden" value="@Url.Action("EditGenericTaskDefinition", "GenericTask")" />
    <input id="urlEditRotation" type="hidden" value="@Url.Action("EditRotationTaskDefinition", "RotationTask")" />
    <input id="urlDeleteConformation" type="hidden" value="@Url.Action("ConfirmDelete")" />
}
@section PageTitleText
{
    @AdminResources.PageTitleTasks
}
@section ItemList
{
    @Html.Partial("_TaskDefinitionItemListTable", Model.Definitions)
}
