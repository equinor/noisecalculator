@using NoiseCalculator.UI.Web.Areas.Admin.Models
@model GenericDefinitionIndexViewModel

@{
    ViewBag.Title = @Model.PageTitle;
}
@section Stylesheets
{
    <link href="@Url.Content("~/Content/Admin.css")" rel="stylesheet" type="text/css" />
}
@section ScriptsBottom
{
    <script src="@Url.Content("~/Scripts/Admin.js")" type="text/javascript"></script>
}

<input id="urlCreate" type="hidden" value="@Model.UrlCreate" />
<input id="urlEdit" type="hidden" value="@Model.UrlEdit" />
<input id="urlDeleteConformation" type="hidden" value="@Model.UrlDeleteConfirmation" />

<h2>@Model.PageTitle</h2>

<div id="mainContent">
    <button id="addNew" class="button">
        <img src="@Url.Content("~/Content/add.png")" class="buttonIcon" />
        Add New
    </button>
    
    <br clear="all" />

    <table id="definitionList">
        <thead>
            <tr>
                <th></th>
                <th style="text-align: left;">Definition Name</th>
                <th></th>
            </tr>
        </thead>
    
        <tbody>
        @foreach (GenericDefinitionViewModel genericDefinitionViewModel in Model.Definitions)
        {
            @Html.Partial("_GenericDefinitionTableRow", genericDefinitionViewModel)
        }
        </tbody>

    </table>
</div>

<div id="dialogDiv" style="display: none;"></div>
<div id="deleteConfirmDialog" style="display: none;"></div>