@using NoiseCalculator.UI.Web.Areas.Admin.Resources
@using NoiseCalculator.UI.Web.ViewModels
@model NoiseCalculator.UI.Web.Areas.Admin.Models.HelicopterTask.HelicopterTaskViewModel
        
<input type="hidden" name="Id" value="@Model.Id" />

<p style="margin-top: 15px;">
    <label for="HelicopterTypeId" class="label-130px">@AdminResources.TaskFormHelideckHelicopterTypeLabel</label>
    :
    <select id="HelicopterTypeId" name="HelicopterTypeId" class="helicopterDropDown">
        @foreach (SelectOptionViewModel selectOption in Model.Helicopters)
        {
            <option value="@selectOption.Value" @selectOption.SelectedAttribute>@selectOption.Text</option>
        }
    </select>
</p>

<p>
    <label for="HelicopterNoiseProtectionDefinitionId" class="label-130px">@AdminResources.TaskFormHelideckHelicopterNoiseProtectionLabel</label>
    :
    <select id="HelicopterNoiseProtectionDefinitionId" name="HelicopterNoiseProtectionDefinitionId" class="helicopterDropDown">
        @foreach (SelectOptionViewModel selectOption in Model.NoiseProtectionDefinitions)
        {
            <option value="@selectOption.Value" @selectOption.SelectedAttribute>@selectOption.Text</option>
        }
    </select>
</p>

<p>
    <label for="HelicopterWorkIntervalId" class="label-130px">@AdminResources.TaskFormHelideckHelicopterWorkIntervalLabel</label>
    :
    <select id="HelicopterWorkIntervalId" name="HelicopterWorkIntervalId" class="helicopterDropDown" >
        @foreach (SelectOptionViewModel selectOption in Model.WorkIntervals)
        {
            <option value="@selectOption.Value" @selectOption.SelectedAttribute>@selectOption.Text</option>
        }
    </select>
</p>

<p>
    <label for="Percentage" class="label-130px">@AdminResources.TaskFormRegularPercentageLabel</label>
    :
    <input id="Percentage" name="Percentage" type="text" value="@Model.Percentage" />
</p>

<p style="margin-top: 10px;">
    <button id="submitButton" class="button" style="margin-left: 85px;">
        <img src="@Url.Content("~/Content/disk.png")" class="buttonIcon" />
        @AdminResources.ButtonSubmit
    </button>
    
    <button id="closeButton" class="button" style="margin-left: 40px;">
        <img src="@Url.Content("~/Content/cancel.png")" class="buttonIcon" />
        @AdminResources.ButtonClose
    </button>
</p>