@using NoiseCalculator.UI.Web.Areas.Admin.Resources
@using NoiseCalculator.UI.Web.ViewModels
@model NoiseCalculator.UI.Web.Areas.Admin.ViewModels.HelicopterTask.HelicopterTaskViewModel
        
<input type="hidden" name="Id" value="@Model.Id" />

<p style="margin-top: 15px;">
    <label for="HelicopterTypeId" class="label-170px">@AdminResources.TaskFormHelideckHelicopterTypeLabel</label>
    :
    <select id="HelicopterTypeId" name="HelicopterTypeId" class="helicopterDropDown">
        @foreach (SelectOptionViewModel selectOption in Model.Helicopters)
        {
            <option value="@selectOption.Value" @selectOption.SelectedAttribute>@selectOption.Text</option>
        }
    </select>
</p>

<p>
    <label for="TaskId" class="label-170px">@AdminResources.TaskFormHelideckTaskLabel</label>
    :
    <select id="TaskId" name="TaskId" class="helicopterDropDown">
        @foreach (SelectOptionViewModel selectOption in Model.Tasks)
        {
            <option value="@selectOption.Value" @selectOption.SelectedAttribute>@selectOption.Text</option>
        }
    </select>
</p>

<p>
    <label for="NoiseLevel" class="label-170px">@AdminResources.GenericTaskNoiseLevel</label>
    <input id="NoiseLevel" type="text" name="NoiseLevel" style="width: 40px;" value="@Model.NoiseLevel" />
    <span>@AdminResources.GenericTaskDecibelLabel</span>
</p>

<p style="margin-top: 10px;">
    <button id="submitButton" class="button" style="margin-left: 85px;">
        <img src="@Url.Content("~/Content/disk.png")" class="buttonIcon" />
        @AdminResources.ButtonSubmit
    </button>
    
    <button id="closeButton" class="button" style="margin-left: 40px;">
        <img src="@Url.Content("~/Content/cancel.png")" class="buttonIcon" />
        @AdminResources.ButtonClose
    </button>
</p>