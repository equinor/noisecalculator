@using NoiseCalculator.UI.Web.Areas.Admin.Resources
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Stylesheets
{
    <link href="@Url.Content("~/Content/Admin.css")" rel="stylesheet" type="text/css" />
}
@section ScriptsBottom
{
    <script src="@Url.Content("~/Scripts/Admin.js")" type="text/javascript"></script>
}
@section AdminLink
{
    <a id="adminLink" href="@Url.Action("Index", "Task", new { area = "" })">@AdminResources.ContextMenuNoiseCalculatorPage</a>
}
@section ContextMenu
{
    <ul class="contextMenu">
        <li><a href="@Url.Action("Index", "TaskDefinition")">@AdminResources.PageTitleTasks</a></li>
        <li><a href="@Url.Action("Index", "NoiseProtectionDefinition")">@AdminResources.PageTitleNoiseProtection</a></li>
        <li><a href="@Url.Action("Index", "HelicopterTask")">@AdminResources.PageTitleHelicopterTasks</a></li>
        <li><a href="@Url.Action("Index", "HelicopterType")">@AdminResources.PageTitleHelicopterTypes</a></li>
        <li><a href="@Url.Action("Index", "HelicopterWorkInterval")">@AdminResources.PageTitleHelictoperWorkInterval</a></li>
        <li><a href="@Url.Action("Index", "HelicopterNoiseProtectionDefinition")">@AdminResources.PageTitleHelicopterNoiseProtection</a></li>
        <li><a href="@Url.Action("Index", "Administrator")">@AdminResources.PageTitleAdministratorUsers</a></li>
    </ul>
}

@RenderSection("AdminHidden", required: true)

<h2>@RenderSection("PageTitleText", required: true)</h2>

<div id="mainContent">
    <button id="addNew" class="button">
        <img src="@Url.Content("~/Content/add.png")" class="buttonIcon" />
        @AdminResources.ButtonAddNew
    </button>
    
    <br clear="all" />

    @RenderSection("ItemList", required: true)
</div>

<div id="dialogDiv"></div>
<div id="translationDialogDiv"></div>
<div id="deleteConfirmDialog"></div>