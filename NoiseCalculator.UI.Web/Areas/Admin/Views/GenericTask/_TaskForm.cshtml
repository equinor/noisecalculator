    <label for="AllowedExposureMinutes" class="label-170px">@AdminResources.GenericTaskAllowedExposure</label>
    <input id="AllowedExposureMinutes" type="text" name="AllowedExposureMinutes" style="width: 40px;" value="@Model.AllowedExposureMinutes" />
    <span>@AdminResources.GenericTaskMinutesLabel</span>
</p>*@
<p>
    <label for="AllowedExposureMinutes" class="label-170px">@AdminResources.GenericTaskAllowedExposure</label>
    <input id="hours" name="hours" type="text" style="width: 20px; height: 13px;" value="@Model.Hours" />
    @TaskResources.HoursUnit
    <input id="minutes" name="minutes" type="text" style="width: 26px; height: 13px;" value="@Model.Minutes" />
    @TaskResources.MinutesUnit
</p>

<p>
    <label for="ButtonPressed" class="label-170px">@AdminResources.GenericTaskButtonPressed</label>
    <input id="ButtonPressed" type="text" name="ButtonPressed" style="width: 40px;" value="@Model.ButtonPressed" />
    <span>@AdminResources.GenericTaskPercentageLabel</span>
</p>

<p>
    <label for="BackgroundNoise" class="label-170px">@AdminResources.GenericTaskBackgroundNoise</label>
    <input id="BackgroundNoise" type="text" name="BackgroundNoise" style="width: 40px;" value="@Model.BackgroundNoise" />
    <span>@AdminResources.GenericTaskDecibelLabel</span>
</p>

    
<p style="margin-top: 10px;">
    <button id="submitTranslationButton" class="button" style="margin-left: 175px;">
        <img src="@Url.Content("~/Content/disk.png")" class="buttonIcon" />
        @AdminResources.ButtonSubmit
    </button>
                
    <button id="closeTranslationButton" class="button" style="margin-left: 40px;">
        <img src="@Url.Content("~/Content/cancel.png")" class="buttonIcon" />
        @AdminResources.ButtonClose
    </button>
</p>