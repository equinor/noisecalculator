@using NoiseCalculator.UI.Web.Areas.Admin.Resources
@model NoiseCalculator.UI.Web.Areas.Admin.Models.Administrator.AdministratorViewModel

<form id="adminForm" action="@Url.Action("Create")" method="POST" style="margin-top: 10px;">
    <p>
        <label for="Username" class="span80">@AdminResources.AdminLabelUsername</label>
        :
        <input id="Username" name="Username" type="text" value="@Model.Username" />
    </p>

    <p style="margin-top: 10px;">
        <button id="submitButton" class="button" style="margin-left: 95px;">
            <img src="@Url.Content("~/Content/disk.png")" class="buttonIcon" />
            @AdminResources.ButtonSubmit
        </button>
    
        <button id="closeButton" class="button" style="margin-left: 10px;">
            <img src="@Url.Content("~/Content/cancel.png")" class="buttonIcon" />
            @AdminResources.ButtonClose
        </button>
    </p>
</form>