@{
    ViewBag.Title = "Home Page";
}

<script src="../../Scripts/jquery-ui-1.8.16.min.js" type="text/javascript"></script>
<link href="../../Content/themes/base/jquery.ui.all.css" rel="stylesheet" type="text/css" />

<script type="text/javascript">
    $(document).ready(function () {
        $("#addButtonRegular")
            .click(function() {
                $("#taskPopup")
                    .empty()
                    .load("@Url.Action("AddTaskRegular")")
                    .dialog({ modal: true, resizable: false, width: 'auto', position: [250,80] });
        });
        
        $("#addButtonHelicopter")
            .click(function() {
                $("#taskPopup")
                    .empty()
                    .load("@Url.Action("AddTaskHelideck")")
                    .dialog({ modal: true, resizable: false, width: 'auto', position: [250,80] });
        });
        
        $("#addButtonRotation")
            .click(function() {
                $("#taskPopup")
                    .empty()
                    .load("@Url.Action("AddTaskRotation")")
                    .dialog({ modal: true, resizable: false, width: 'auto', position: [250,80] });
        });
        

        $("#addButtonTest")
            .click(function() {
                $("#taskPopup")
                    .empty()
                    .load("@Url.Action("AddTask")")
                    .dialog({ modal: true, resizable: false, width: 'auto', position: [250,80] });
        });
        
    });
</script>

