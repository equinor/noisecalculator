@using NoiseCalculator.UI.Web.Resources
@model NoiseCalculator.UI.Web.ViewModels.RegularViewModel

<form method="POST" action="@Url.Action("EditTaskRegular", new { Id = Model.SelectedTaskId})" id="editForm" >
    @Html.Partial("_TaskFormRegular", Model)
    
    <p id="editFormButtons">
        <div id="submitButton" class="button">
            <img src="@Url.Content("~/Content/disk.png")" class="buttonIcon" />
            @TaskResources.TaskFormButtonSubmitEdit
        </div>
        
        <div id="taskFormCloseButton" class="button">
            <img src="@Url.Content("~/Content/cancel.png")" class="buttonIcon" />
            @TaskResources.TaskFormButtonClose
        </div>

        <br clear="all" />
    </p>
</form>