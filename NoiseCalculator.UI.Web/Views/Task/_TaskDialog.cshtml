@using NoiseCalculator.UI.Web.Resources
@using NoiseCalculator.UI.Web.ViewModels
@using NoiseCalculator.Domain.Entities
@model TaskSelectViewModel

<input type="hidden" id="hiddenTaskDialogTitle" value="@TaskResources.TaskDialogAddTitle" />

<span>Kategorier</span><br />

<select id="taskDefSelect" size="1">
    @foreach (TaskDefinition taskDef in Model.TaskDefinitions)
    {
        <option value="@taskDef.SystemName">@taskDef.SystemName  (@taskDef.RoleType)</option>
    }
</select>
<br /><br /><span>Oppgaver</span><br />
<select id="taskSelect" size="19">
    @foreach (Task task in Model.Tasks)
    {
        <option value="@task.Id-@task.Role.RoleType">@task.Title  (@task.Role.RoleType)</option>
    }
</select>

<div id="useTask" class="button">
    <img src="@Url.Content("~/Content/arrow_down.png")" class="buttonIcon" />
    @TaskResources.TaskDialogButtonUseTask
    <img src="@Url.Content("~/Content/help.png")" title="@TaskResources.TaskDialogInfoUseTask"></img>
</div>
<div id="infoUseTask">
</div>

<br clear="all" />

<div id="taskForm"></div>
