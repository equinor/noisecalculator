@using System.Security.Claims
@using NoiseCalculator.UI.Web.Support
@using NoiseCalculator.UI.Web.Resources
<!DOCTYPE html>
<html data-ng-app="noiseCalcApp">
<head>
    <title>@ViewBag.Title</title>
    <title>@ViewBag.username</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/minified/jquery-ui.min.css")" rel="stylesheet" type="text/css" />
    @RenderSection("Stylesheets", required: false)
    <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.cookie.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/json2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/NoiseCalculatorCommon.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/angular.min.js")"></script>
</head>
<body ng-controller="IndexController">
    <div class="header">
        <div style="position: relative;">
            <img id="headerLogo" style="height: 40px" />
            <span id="applicationTitle">
                @TaskResources.ApplicationTitle 
                <span id="helpButton"> <img src="@Url.Content("~/Content/help.png")" style="display: inline-block; height: 18px; width: 18px; vertical-align: middle; " /><a id="helpLink" style="color: white; text-decoration: none;" href="@TaskResources.IndexHelpLink">  @TaskResources.IndexHelpTitle</a></span> 
            </span>
            
            <div style="color: White; text-align: right; position: absolute; right: 10px; top: 0px;" >
                <span style="display: block;" >
                    @RenderSection("AdminLink", required: false)
                    @TaskResources.LayoutUserLabel: <strong>@UserHelper.CreateUsernameWithoutDomain(@ViewBag.UserName)</strong>
                </span>
                
                <img id="langNo" src="@Url.Content("~/Content/no.png")" width="22" height="16" alt="Norwegian" />
                <img id="langEn" src="@Url.Content("~/Content/gb.png")" width="22" height="16" alt="English" />
                <input id="currentLangTwoCharCode" type="hidden" value="@System.Threading.Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName" />
            </div>
            <br style="clear: both;" />
        </div>
        
        @RenderSection("ContextMenu", required: false)
    </div>
    
    <div id="main">
        @RenderBody()
    </div>


    <div id="helpDialog" title="@TaskResources.IndexHelpTitle">@Html.Partial("_Help")</div>
    
    @RenderSection("ScriptsBottom", required: false)
</body>
</html>
