 <!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
</head>
<body style="font-family: Verdana; font-size: 14px; background-color: lightgray;">
    <div>
        <div style="width: 100%; background-color: #333; border-bottom: 2px solid black; ">
            <img src="../../Content/Statoil_logo.gif" style="float: left;" />
            
            <div style="color: White; text-align: right; position: relative;" >
                Welcome <strong>@User.Identity.Name</strong>!
            </div>
            
            <br clear="all"/>
        </div>  
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
